generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String @id @default(uuid())
  title      String @unique
  description String
  year        Int
  image       String
  imdbScore   Int
  trailerYouTubeUrl String
  gamePlayYouTubeUrl String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  genres Genre[]
  favorites Favorite[]

  @@map("game")
}

model User {
  id       String @id @default(uuid())
  name     String @unique
  password String
  image    String
  isAdmin  Boolean
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profiles Profile[]


  @@map("user")
}

model Profile {
  id String @id @default(uuid())

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  title String @unique
  image String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  favorites Favorite[]

  @@map("profile")
}

model Genre{
  id String @id @default(uuid())
  name String @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  games Game[]

  @@map("genre")
}

model Favorite{
  id String @id @default(uuid())

  profile Profile @relation(fields: [profileId], references: [id])
  profileId String @map("profile_Id")


  games Game[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("favorite")
}
